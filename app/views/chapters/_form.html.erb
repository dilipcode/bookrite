<%= simple_form_for [@book, chapter], html: {id: "new-chapter-form"}, remote: true do |f|%>
  <%= f.input :title %>
  <%= f.input :notes %>
  <%= f.submit class: "btn btn-primary btn-sm" %>
  <%= link_to "Cancel", "#", id: 'cancel-new-chapter-form', class: "btn btn-danger btn-sm" if chapter.new_record? %>
<% end %>
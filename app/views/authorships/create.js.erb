$('#invite-author-modal .alert-danger').addClass('hidden');
<% if @invalid_email %>

  $('#invite-author-modal .alert-danger').removeClass('hidden');

<% else %>
  $('#invite-author-modal').modal('hide');
  $('#invite-author-modal form')[0].reset();
  $('header .alert').remove();
  $('header').append('<%= j flash_messages_tag %>');
  
<% end %>